# Routes
# This file defines all application routes (Higher priority routes first)
# ~~~~

# Home page
GET     /                           controllers.Application.index
GET     /hoursPerYear.html          controllers.TimeController.hoursPerYear
GET     /calculator.html            controllers.RateController.enterRate
GET     /income/rate.html           controllers.RateController.enterIncomeRate
GET     /rateDifference.html        controllers.RateController.rateDifference
GET     /resources.html             controllers.Application.resources
GET     /contact.html               controllers.Application.contact

POST    /calculateHoursPerYear      controllers.TimeController.calculateHoursPerYear
POST    /calculateRate              controllers.RateController.calculateRate
POST    /calculateRateDifference    controllers.RateController.calculateRateDifference
POST	  /income						   controllers.RateController.calculateIncome

# Webjars catch all
GET     /webjars/*file                    controllers.WebJarAssets.at(file)

# Map static resources from the /public folder to the /assets URL path
GET     /assets/*file               controllers.Assets.at(path="/public", file)
